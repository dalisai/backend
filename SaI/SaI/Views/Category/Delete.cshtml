@model SaI.Models.Category
@{
    ViewBag.Title = "Delete";
}
@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
<form>
    <section class="content">
       
            <div class="box box-primary">
                <div class="box-header with-border">
                    <h3 class="box-title">Delete  Category</h3>
                </div>
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.ID)
                <div class="box-body">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.HiddenFor(model => model.ID)
                    <div class="form-group">
                        <h3>Are you sure you want to remove this Category?</h3>
                    </div>
                    <div class="form-group">
                        <label>@Html.DisplayNameFor(model => model.Description) :</label> @Html.DisplayFor(model => model.Description)
                    </div>
                        <div class="box-footer">
                            <input type="submit" value="Delete" class="btn btn-danger" onclick="launch_toast()" />&nbsp;
                            <input type="button" value="Cancel" onclick="location.href='@Url.Action("Index")'" class="btn btn-default" />
                        </div>
                </div>
            </div>
    </section>
</form>
}

