
@model SaI.Models.Customer
<section class="content">

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
            <!-- SELECT2 EXAMPLE -->
        <div class="box box-primary">
            <div class="box-header with-border">
                <h3 class="box-title">Edit Customer</h3>
            </div>
            <!-- /.box-header -->
            <form role="form">

                <div class="box-body">
                    <div class="form-group">
                        <label>Name</label>
                        @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control", @type = "text", @placeholder = "Input Name" } })
                        @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        <label>Credit Limit</label>
                        @Html.EditorFor(model => model.CreditLimit, new { htmlAttributes = new { @class = "form-control", @type = "number", @placeholder = "Input Credit Limit" } })
                        @Html.ValidationMessageFor(model => model.CreditLimit, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        <label>Discount</label>
                        @Html.EditorFor(model => model.Discount, new { htmlAttributes = new { @class = "form-control", @type = "number", @placeholder = "Input Discount" } })
                        @Html.ValidationMessageFor(model => model.Discount, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        <label>Price Type</label>
                        @Html.EditorFor(model => model.PriceType, new { htmlAttributes = new { @class = "form-control", @type = "number", @placeholder = "Input Price Type" } })
                        @Html.ValidationMessageFor(model => model.PriceType, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        <label>Birthday</label>
                        <div class="input-group date">
                            <div class="input-group-addon">
                                <i class="fa fa-calendar"></i>
                            </div>
                            @Html.EditorFor(model => model.Birthday, new { htmlAttributes = new { @id = "datepicker", @class = "form-control pull-right", @type = "text" } })
                        </div>
                        @Html.ValidationMessageFor(model => model.Birthday, "", new { @class = "text-danger" })
                        <!-- /.input group -->
                    </div>

                    <div class="form-group">
                        <label>Address 1</label>
                        @Html.EditorFor(model => model.Address1, new { htmlAttributes = new { @class = "form-control", @type = "text", @placeholder = "Input Address 1" } })
                        @Html.ValidationMessageFor(model => model.Address1, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        <label>Address 2</label>
                        @Html.EditorFor(model => model.Address2, new { htmlAttributes = new { @class = "form-control", @type = "text", @placeholder = "Input Address 2" } })
                        @Html.ValidationMessageFor(model => model.Address2, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        <label>Telephone</label>
                        @Html.EditorFor(model => model.Telephone, new { htmlAttributes = new { @class = "form-control", @type = "numer", @placeholder = "Input Telephone number" } })
                        @Html.ValidationMessageFor(model => model.Telephone, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        <label>Fax</label>
                        @Html.EditorFor(model => model.Fax, new { htmlAttributes = new { @class = "form-control", @type = "number", @placeholder = "Input Fax number" } })
                        @Html.ValidationMessageFor(model => model.Fax, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        <label>Type</label>
                        @Html.EditorFor(model => model.Type, new { htmlAttributes = new { @class = "form-control", @type = "text", @placeholder = "Input Type" } })
                        @Html.ValidationMessageFor(model => model.Type, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        <label>Remarks</label>
                        @Html.EditorFor(model => model.Remarks, new { htmlAttributes = new { @class = "form-control", @type = "text", @placeholder = "Input Remarks" } })
                        @Html.ValidationMessageFor(model => model.Remarks, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        <label>Company</label>
                        @Html.EditorFor(model => model.Company, new { htmlAttributes = new { @class = "form-control", @type = "text", @placeholder = "Input Company" } })
                        @Html.ValidationMessageFor(model => model.Company, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        <label>Points</label>
                        @Html.EditorFor(model => model.Points, new { htmlAttributes = new { @class = "form-control", @type = "number", @placeholder = "Input points" } })
                        @Html.ValidationMessageFor(model => model.Points, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        <label>Last visit</label>
                        <div class="input-group date">
                            <div class="input-group-addon">
                                <i class="fa fa-calendar"></i>
                            </div>
                            @Html.EditorFor(model => model.LastVisit, new { htmlAttributes = new { @id = "datepicker2", @class = "form-control pull-right", @type = "text" } })
                        </div>
                        @Html.ValidationMessageFor(model => model.LastVisit, "", new { @class = "text-danger" })
                        <!-- /.input group -->
                    </div>

                    <!-- /.form-group -->
                </div>
                <!-- /.box-body -->
                <div class="box-footer">
                    @*Visit <a href="https://select2.github.io/">Select2 documentation</a> for more examples and information about
                        the plugin.*@
                    <input type="submit" value="Update" class="btn btn-primary" />&nbsp;
                    <input type="button" value="Cancel" class="btn btn-default" onclick="location.href='@Url.Action("Index")'" />
                </div>
            </form>
        </div>
    }
</section>
}

