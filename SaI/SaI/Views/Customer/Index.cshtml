@model  IEnumerable<SaI.Models.Customer>


<section class="content">
    <!-- SELECT2 EXAMPLE -->
    <div class="box box-primary">
        <div class="box-header with-border">
            <h3 class="box-title">Customer</h3>
            <div class="box-tools">

                <button type="submit" class="btn btn-primary pull-right" onclick="location.href='@Url.Action("Add")'">Add Customer</button>&nbsp;
            </div>
        </div>
        <div class="box">
            <div class="box-header">
                <h3 class="box-title"></h3>
            </div>
            <!-- /.box-header -->
            <div class="box-body">
                <div class="dataTables_wrapper form-inline dt-bootstrap" id="example1_wrapper">
                    <div class="row">
                        <div class="col-sm-12">
                            <table class="table table-bordered table-striped dataTable" role="grid" id="example1" aria-describedby="example1_info">
                                <thead>
                                    <tr role="row">
                                        <th>ID</th>
                                        <th>Name</th>
                                        <th>Credit Limit</th>
                                        <th>Discount</th>
                                        <th>Price Type</th>
                                        <th>Birthday</th>
                                        <th>Address 1</th>
                                        <th>Address 2</th>
                                        <th>Telephone</th>
                                        <th>Fax</th>
                                        <th>Date Added</th>
                                        <th>Type</th>
                                        <th>Remarks</th>
                                        <th>Company</th>
                                        <th>Points</th>
                                        <th>Last Visit</th>
                                        <th>Photo</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody>

                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@item.ID</td>
                                            <td>@item.Name</td>
                                            <td>@item.CreditLimit</td>
                                            <td>@item.Discount</td>
                                            <td>@item.PriceType</td>
                                            <td>@item.Birthday</td>
                                            <td>@item.Address1</td>
                                            <td>@item.Address2</td>
                                            <td>@item.Telephone</td>
                                            <td>@item.Fax</td>
                                            <td>@item.DateAdded</td>
                                            <td>@item.Type</td>
                                            <td>@item.Remarks</td>
                                            <td>@item.Company</td>
                                            <td>@item.Points</td>
                                            <td>@item.LastVisit</td>
                                            <td>@item.Photo</td>
                                            <td class="col-sm-4">
                                                <button class="btn btn-primary glyphicon glyphicon-pencil" onclick="location.href='@Url.Action("Edit", "Customer", new { id = @item.ID})'"> Edit</button>&nbsp;
                                                <button class="btn btn-danger glyphicon glyphicon-trash" onclick="location.href='@Url.Action("Delete", "Customer", new { id = @item.ID})'"> Delete</button>
                                            </td>
                                        </tr>
                                    }

                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
            <!-- /.box-body -->
        </div>
    </div>
</section>
