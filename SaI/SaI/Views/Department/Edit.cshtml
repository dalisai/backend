@section Items{
    <link rel="stylesheet" href="~/Content/bower_components/select2/dist/css/select2.min.css">
    <link rel="stylesheet" href="~/Content/bower_components/bootstrap-colorpicker/dist/css/bootstrap-colorpicker.min.css">
}
@model SaI.Models.Department
<section class="content">

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
            <!-- SELECT2 EXAMPLE -->
        <div class="box box-primary">
            <div class="box-header with-border">
                <h3 class="box-title">Add Department</h3>
            </div>
            <!-- /.box-header -->
            <form role="form">

                <div class="box-body">
                    <div class="form-group">
                        <label>Long Description</label>
                        @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "form-control", @type = "text", @placeholder = "Input Long Description" } })
                        @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        <label>Back color</label>
                        @Html.EditorFor(model => model.BackColor, new { htmlAttributes = new { @class = "form-control my-colorpicker1", @type = "text" } })
                        @Html.ValidationMessageFor(model => model.BackColor, "", new { @class = "text-danger" })

                    </div>

                    <!-- /.form-group -->
                </div>
                <!-- /.box-body -->
                <div class="box-footer">
                    @*Visit <a href="https://select2.github.io/">Select2 documentation</a> for more examples and information about
                        the plugin.*@
                    <input type="submit" value="Add" class="btn btn-primary" />&nbsp;

                    <button type="submit" class="btn btn-default">Cancel</button>
                </div>
            </form>
        </div>
    }
</section>

}

@section ItemsScript{
    <script src="~/Content/bower_components/select2/dist/js/select2.full.min.js"></script>
    <script src="~/Content/bower_components/bootstrap-colorpicker/dist/js/bootstrap-colorpicker.min.js"></script>

    <script>

        $(function () {
            //Initialize Select2 Elements
            $('.select2').select2()
            $('.my-colorpicker1').colorpicker()
        })
    </script>
}
