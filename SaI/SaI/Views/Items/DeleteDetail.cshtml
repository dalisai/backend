@model SaI.ViewModel.ItemViewModel

<form action="/Items/DeleteDetail" method="post">
    <section class="content">
        <div class="box box-primary">
            <div class="box-header with-border">
                <h3 class="box-title">Remove Branch</h3>
            </div>
            <div class="box-body">
                @Html.HiddenFor(model => model.Item.ID)
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.ItemDetail.ID)
                <div class="form-group">
                    <h3>Are you sure you want to remove this item?</h3>
                </div>
                <div class="form-group">
                   <label>@Html.DisplayNameFor(model => model.ItemDetail.ItemDetailStockNo) :</label> @Html.DisplayFor(model => model.ItemDetail.ItemDetailStockNo)
                </div>
                <div class="form-group">
                    <label>@Html.DisplayNameFor(model => model.ItemDetail.Stock) :</label> @Html.DisplayFor(model => model.ItemDetail.Stock)
                </div>
                <div class="form-group">
                    <label>@Html.DisplayNameFor(model => model.ItemDetail.UnitID) :</label> @Html.DisplayFor(model => model.ItemDetail.UnitID)
                </div>
                <div class="form-group">
                    <label>@Html.DisplayNameFor(model => model.ItemDetail.Packing) :</label> @Html.DisplayFor(model => model.ItemDetail.Packing)
                </div>
                <div class="form-group">
                    <label>@Html.DisplayNameFor(model => model.ItemDetail.Ratio) :</label> @Html.DisplayFor(model => model.ItemDetail.Ratio)
                </div>
                
                    @using (Html.BeginForm()) {
                        @*@Html.AntiForgeryToken()*@
                        <div class="box-footer">
                            <input type="submit" value="Delete" class="btn btn-danger" onclick="launch_toast()" />&nbsp;
                            <input type="button" value="Cancel" onclick="location.href='@Url.Action("EditItem", "Items", new { id = Model.Item.ID })'" class="btn btn-default" />
                        </div>
                    }
            </div>
        </div>
    </section>
</form>
