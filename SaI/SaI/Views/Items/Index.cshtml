@model SaI.Models.Items

<section class="content">
    <!-- SELECT2 EXAMPLE -->
    <div class="box box-primary">
        <div class="box-header with-border">
            <h3 class="box-title">Items</h3>
            <div class="box-tools">
                <button type="submit" class="btn btn-primary pull-right" onclick="location.href='@Url.Action("AddItem", "Items")'">Add Item</button>&nbsp;
            </div>
        </div>
        <div class="box">
            <div class="box-header">
                <h3 class="box-title"></h3>
            </div>
            <!-- /.box-header -->
            <div class="box-body">
                <div class="dataTables_wrapper form-inline dt-bootstrap" id="example1_wrapper">
                    <div class="row">
                        <div class="col-sm-12">
                            <table class="table table-bordered table-striped dataTable" role="grid" id="example1" aria-describedby="example1_info">
                                <thead>
                                    <tr role="row">
                                        <th>ItemCode</th>
                                        <th>Long Description</th>
                                        <th>Short Description</th>
                                        <th>Large Packing</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.ItemList) {
                                        <tr>
                                            <td>@item.ItemCode</td>
                                            <td>@item.LongDescription</td>
                                            <td>@item.ShortDescription</td>
                                            <td>@item.LargePacking</td>
                                            <td>
                                                <button class="btn btn-warning glyphicon glyphicon-pencil" onclick="location.href='@Url.Action("EditItem", "Items", new { id = @item.ID })'"> Edit</button>&nbsp;
                                                <button class="btn btn-danger glyphicon glyphicon-trash" onclick="location.href='@Url.Action("DeleteItem", "Items", new { id = @item.ID })'"> Delete</button>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
            <!-- /.box-body -->
        </div>
    </div>
</section>