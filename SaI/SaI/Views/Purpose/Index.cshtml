@model IEnumerable<SaI.Models.Purpose>

<section class="content">
    <!-- SELECT2 EXAMPLE -->
    <div class="box box-primary">
        <div class="box-header with-border">
            <h3 class="box-title">Purpose</h3>
            <div class="box-tools">
                <button type="submit" class="btn btn-primary pull-right" onclick="location.href='@Url.Action("Add", "Purpose")'">Add Purpose</button>&nbsp;
            </div>
        </div>
        <div class="box">
            <div class="box-header">
                <h3 class="box-title"></h3>
            </div>
            <!-- /.box-header -->
            <div class="box-body">
                <div class="dataTables_wrapper form-inline dt-bootstrap" id="example1_wrapper">
                    <div class="row">
                        <div class="col-sm-12">
                            <table class="table table-bordered table-hover dataTable" role="grid" id="example1" aria-describedby="example1_info">
                                <thead>
                                    <tr role="row">
                                        <th>No.</th>
                                        <th>Purpose Description</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @{
                                            int x = 1;
                                            foreach (var item in Model) {
                                            <tr>
                                                <td>@x</td>
                                                <td>@item.Description</td>
                                                <td>
                                                    <button class="btn btn-primary glyphicon glyphicon-pencil" onclick="location.href='@Url.Action("Edit", "Purpose", new { id = @item.ID})'"> Edit</button>&nbsp;
                                                    <button class="btn btn-danger glyphicon glyphicon-trash" onclick="location.href='@Url.Action("Delete", "Purpose", new { id = @item.ID})'"> Delete</button>
                                                </td>
                                            </tr>
                                            x += 1;
                                        }
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
            <!-- /.box-body -->
        </div>
    </div>
</section>